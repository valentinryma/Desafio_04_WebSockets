<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    {{!-- All Styles --}}
    {{#each styles}}
    <link rel="stylesheet" href="/css/{{this}}">
    {{/each}}

    <title>{{title}}</title>
</head>

<body>
    {{{body}}}

    {{!-- Socket Script --}}
    {{#if useWS}}
    <script src="/socket.io/socket.io.js"></script>
    {{/if}}

    {{!-- All Scripts --}}
    {{#each scripts}}
    <script src="/js/{{this}}"></script>
    {{/each}}
</body>

</html>